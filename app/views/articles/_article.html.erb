<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= article.title %></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col-md-6">Views: <%= article.views%></div>
          <div class="col-md-6">
            <%= link_to "View", article_path(article), class: "btn btn-primary" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning" %>
            <%= link_to 'Delete', article_path(article), class: "btn btn-danger", method: "delete",
                        data: {confirm: "Do you want to delete this article?"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
