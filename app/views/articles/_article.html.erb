<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= article.title %></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
        <div class="row">
          <div class="col-md-6">
            <h5>Comments</h5>
            <%= render article.comments %>
            <form action="<%= create_comment_url(article) %>" method="post">
              <%= token_tag %>
              <textarea id="comment_content" name="comment_content" placeholder="Leave a comment" class="form-control"></textarea>
              <button type="submit" class="btn btn-primary-outline">Comment</button>
            </form>
          </div>
          <div class="col-md-6">
            <h5>Tags</h5>
            <%= render article.tags %>
            <form action="<%= create_tag_url(article) %>" method="post">
              <%= token_tag %>
              <input type="text" id="tag_value" name="tag_value" placeholder="Add a tag" class="form-control"/>
              <button type="submit" class="btn btn-primary-outline">Tag</button>
            </form>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col-md-6">Views: <%= article.views %></div>
          <div class="col-md-6">
            <%= link_to "View", article_path(article), class: "btn btn-primary" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning" %>
            <%= link_to 'Delete', article_path(article), class: "btn btn-danger", method: :delete, data: {confirm: "Do you want to delete this article?"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
